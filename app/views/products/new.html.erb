<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this dinosaur from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>Enter a new dinosaur to submit into inventory:</h2>
<%= form_tag '/products', method: :post do %>
  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @product.title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :quantity %>
    <%= text_field_tag :quantity, @product.quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier %>
    <%= text_field_tag :supplier, @product.supplier, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>