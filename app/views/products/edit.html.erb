<h2>Update <%= @product.title %>:</h2>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @product.title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :quantity %>
    <%= text_field_tag :quantity, @product.quantity, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>
