<h2>Enter the following to upload a new image:</h2>
<%= form_tag '/images', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :URL %>
    <%= text_field_tag :link, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :product_id, "Product ID" %>
    <%= text_field_tag :product_id, nil, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>
